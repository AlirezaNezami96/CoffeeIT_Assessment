<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleBig">
        <item name="android:fontFamily">@font/avenir_regular</item>
        <item name="android:textSize">@dimen/textSizeTitleBig</item>
        <item name="android:textColor">@color/blackTextColor</item>
    </style>

    <style name="Title">
        <item name="android:layout_margin">@dimen/marginDefaultGuideline</item>

    </style>

    <style name="ToolbarTitle">
        <item name="android:fontFamily">@font/avenir_bold</item>
        <item name="android:textSize">@dimen/toolbarTextSize</item>
        <item name="android:textColor">@color/blackTextColor</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/white</item>
        <item name="elevation">0dp</item>

    </style>

    <style name="ItemLayout">
        <item name="android:background">@drawable/round_corner_layout</item>
        <item name="android:padding">@dimen/marginDefaultGuideline</item>
        <item name="android:layout_marginTop">@dimen/itemVerticalMargin</item>
        <item name="android:layout_marginEnd">@dimen/itemVerticalMargin</item>
        <item name="android:layout_marginStart">@dimen/itemVerticalMargin</item>
    </style>

    <style name="TitleItem">
        <item name="android:fontFamily">@font/avenir_regular</item>
        <item name="android:textSize">@dimen/textSizeTitleItem</item>
        <item name="android:textColor">@color/whiteTextColor</item>
    </style>

    <style name="TextButton">
        <item name="android:fontFamily">@font/avenir_bold</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="backgroundTint">@color/buttonTextColor</item>
        <item name="android:padding">@dimen/buttonVerticalPadding</item>
        <item name="android:layout_margin">@dimen/buttonMargin</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_marginTop">@dimen/itemVerticalMargin</item>
        <item name="android:layout_marginBottom">@dimen/itemVerticalMargin</item>
        <item name="android:padding">16dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:background">@color/radioButtonBgColor</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@drawable/radio_button_selector</item>
        <item name="android:buttonTint">@color/white</item>
    </style>

    <style name="overview_radio_button">
        <item name="android:padding">16dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:background">@color/radioButtonBgColor</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@drawable/radio_button_selector</item>
        <item name="android:buttonTint">@color/white</item>
    </style>
</resources>
